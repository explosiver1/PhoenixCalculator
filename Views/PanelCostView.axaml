<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PhoenixCalculator_Avallon.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PhoenixCalculator_Avallon.Views.PanelCostView"
             x:DataType="vm:PanelCostViewModel">
                <StackPanel  Spacing="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Wood Material Type:" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding woodMaterialType}" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Thickness:" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding woodMaterialType}" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Width:" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding woodMaterialType}" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Height:" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding woodMaterialType}" />
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="Price:" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding woodMaterialType}" />
                        <TextBlock Grid.Row="6" Grid.Column="1" Text="Date Modified:" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding woodMaterialType}" />
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="Last Modified By:" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding woodMaterialType}" />
                        <TextBlock Grid.Row="8" Grid.Column="1" Text="Connection Status:" />
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding connStatus}" />
                        <Button Command="{Binding UpdatePanelCost}" Content="Update" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="9" />
                        
                        
                        
                        

                    </Grid>
                </StackPanel>
</UserControl>

